<!DOCTYPE html>
<html lang="tr">
<head>
    <%- include('../partials/head') %>
</head>
<body data-bs-theme="dark">
    <%- include('../partials/admin-nav') %>
    <div class="container">
        <form method="post" class="justify-content-center d-flex">
            <div class="col-12 col-sm-8 col-md-8">
                <div class="mb-3 mt-5 mx-5">
                    <label for="foodName" class="form-label mb-3">Ürün Adı</label>
                    <input type="text" name="name" class="form-control">
                </div>
                <div class="mb-3 mt-5 mx-5">
                    <label for="contains" class="form-label mb-3">İçerik</label>
                    <input type="text" name="description" class="form-control">
                </div>
                <div class="mb-3 mt-5 mx-5">
                    <label for="roomNumber" class="form-label mb-3">Fiyat</label>
                    <input type="number" step=0.01 name="price" class="form-control">
                </div>
                <div class="mb-3 mt-5 mx-5">
                    <div class="form-check">
                        <input class="form-check-input" name="availability" type="checkbox" value="1" id="activated">
                        <label class="form-check-label" for="activated">
                          Aktif
                        </label>
                      </div>
                </div>
                <div class="d-flex justify-content-center my-5">
                    <button type="submit" class="btn btn-outline-light d-block w-75">Ekle</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>