<!DOCTYPE html>
<html lang="tr">
<head>
    <%- include('../partials/head') %>
</head>
<body data-bs-theme="dark">
    <%- include('../partials/admin-nav') %>
    <div class="container d-flex justify-content-center my-3">
        <table class="table">
            <thead>
                <tr class="table-bordered">
                    <td>ID</td>
                    <td>Ad Soyad</td>
                    <td>kullanici adi</td>
                    <td>Oluşturma Tarihi</td>
                    <td></td>
                </tr>
            </thead>
            
            <tbody>
                <% users.forEach(user => { %> <!-- Burada users dizisini döngü ile geziyoruz -->
                    <tr>
                        <td><%= user.id %></td> <!-- user.id ile dinamik olarak kullanıcı ID'sini yazdırıyoruz -->
                        <td><%= user.name %></td> <!-- user.name ile dinamik olarak kullanıcı adını yazdırıyoruz -->
                        <td><%= user.username %></td> <!-- user.username ile dinamik olarak kullanıcı email'ini yazdırıyoruz -->
                        <td><%= user.createdAt.toLocaleString() %></td> <!-- user.createdAt ile oluşturulma tarihini yazdırıyoruz -->
                        <td>
                            <a href="/admin/admins/edit/<%= user.id %>" class="btn btn-outline-warning">Düzenle</a>
                            <a href="/admin/admins/delete/<%= user.id %>" class="btn btn-outline-danger">Sil</a>
                        </td>
                    </tr>
                <% }); %> <!-- Döngü kapanıyor -->
            </tbody>
        </table>
    </div>
</body>
</html>
