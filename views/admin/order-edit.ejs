<!DOCTYPE html>
<html lang="tr">
<head>
    <%- include('../partials/head') %>
</head>
<body data-bs-theme="dark">
    <%- include('../partials/admin-nav') %>
    <div class="container">
        <form method="post" action="/admin/order/edit/<%= order.id %>" class="justify-content-center d-flex">
            <div class="col-12 col-sm-8 col-md-8">
                <div class="mb-3 mt-5 mx-5">
                    <label for="status" class="form-label mb-3">Durum</label>
                    <input type="text" name="status" value="<%= order.status %>" class="form-control">
                </div>
                <div class="mb-3 mt-5 mx-5">
                    <label for="price" class="form-label mb-3">Fiyat</label>
                    <input type="text" name="price" value="<%= order.price %>" class="form-control">
                </div>
                <div class="mb-3 mt-5 mx-5">
                    <label for="quantity" class="form-label mb-3">Adet</label>
                    <input type="number"  name="quantity" value="<%= order.quantity %>" class="form-control">
                </div>
                <div class="mb-3 mt-5 mx-5">
                    <div class="form-check">
                        <!-- Gizli input, checkbox işaretli olmadığında 0 gönderir -->

                    
                    </div>
                </div>
                <div class="d-flex justify-content-center my-5">
                    <button type="submit" class="btn btn-outline-light d-block w-75">Düzenle</button>
                </div>
            </div>
        </form>
    </div>
</body>
</html>
